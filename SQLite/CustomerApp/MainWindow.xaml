<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="600" Width="900">
    <Grid>
        

        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="検索" Width="50" Height="20" HorizontalAlignment="Center" FontSize=" 15"/>
                <TextBox x:Name="Searchtb"  Width="500" FontSize="15" TextChanged="SearchTextBox_TextChanged" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="名前" Width="50" Height="15" Margin="0,5,0,0"/>
                <TextBox x:Name="Name" Width="230"  Margin="0,5,0,0" FontSize="11"/>
                <Button Name="save" Content="保存" Width="90" Margin="5,5,0,0" Click="save_Click" RenderTransformOrigin="1.09,-4.106"/>
                <Button Name="delete" Content="削除" Width="90" Margin="0,5,0,0" Click="delete_Click"/>
                <Button Name="update" Content="更新" Width="90" Margin="0,5,0,0" Click="update_Click"/>

            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <TextBlock Text="電話番号" Width="50" Height="15" Margin="0,5,0,0"/>
                <TextBox x:Name="Phone" Width="230"  Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="住所" Width="50" Height="15" Margin="0,5,0,0"/>
                <TextBox x:Name="Address" Width="230"  Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Name="gbt" Content="画像" HorizontalAlignment="Left" Height="80" Width="60" Margin="0,5,0,0" Click="gbt_Click"/>
                <Image x:Name="picture" AllowDrop="False" Width="100" Margin="0,5,0,0" MouseLeftButtonDown="picture_MouseLeftButtonDown">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="stmax"/>
                    </Image.RenderTransform>
                </Image>

            </StackPanel>



            <!--//追加機能用に開けておく-->

            <ListView Margin="0,5,0,0" Height="380" Name="viewview" SelectionChanged="viewview_SelectionChanged_1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                            <TextBlock Text="{Binding Address}" Foreground="Green"/>
                            <Image Source="{Binding Picture}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackPanel>
        
    </Grid>
</Window>
