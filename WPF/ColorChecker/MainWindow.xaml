<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="267*"/>

        </Grid.ColumnDefinitions>

        <Label x:Name="colorArea" Margin="10,10,10,10" Background="Black" Grid.ColumnSpan="2"/>

        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="R" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="G" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Text="B" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" Maximum="255"  VerticalAlignment="Center" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>
            <TextBox x:Name="rValue" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="20"
                       Text="{Binding ElementName=rSlider, Path=Value, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0}}"/>

            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" Maximum="255"  VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="20"
                    Text="{Binding ElementName=gSlider, Path=Value, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0}}"/>

            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" Maximum="255"  VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="20"
                    Text="{Binding ElementName=bSlider, Path=Value, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0}}"/>
            <ComboBox x:Name="combob" ItemsSource="{Binding}" SelectedValue="{Binding Color}" Margin="0,37,0,0" Height="24" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Center" Width="155" Grid.Row="3" Grid.Column="1" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>







        </Grid>
        <Grid Grid.Column="2" d:IsHidden="True" Grid.ColumnSpan="2" Margin="266,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="34*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="237*"/>


            </Grid.RowDefinitions>

        </Grid>
        <Button x:Name="Stockbt" Grid.Column="3" Content="STOCK" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top" Width="200" Margin="0,22,0,0" FontSize="20" Click="Stockbt_Click"/>
        <ListBox x:Name="Stocklb" Grid.Column="3" HorizontalAlignment="Left" Height="300"  Margin="31,90,0,0" VerticalAlignment="Top" Width="200" d:ItemsSource="{d:SampleData ItemCount=10}" SelectionChanged="Stocklb_SelectionChanged"/>
        <Button x:Name="allclear" Grid.Column="3" Content="clear" HorizontalAlignment="Left" Margin="81,396,0,0" VerticalAlignment="Top" Width="100" FontSize="18" Click="allclear_Click"/>














    </Grid>







</Window>
